@model Project_AkmalRentals.Models.tb_landlord

@{
    ViewBag.Title = "Edit";
}

<style>
    .form-container {
        padding-left: 20px; /* Adjust the value as needed */
    }

    .column1 {
        width: 200px;
    }

    .column2 {
        width: 50px;
    }
    /* Add more CSS rules for other columns as needed */
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">EDIT LANDLORD DETAILS</h6>
                    </div>
                    <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                        <div class="table-responsive p-0">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.l_id)

                                    <table class="table">
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.EditorFor(model => model.l_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.l_name, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_contact, "Mobile No.", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.EditorFor(model => model.l_contact, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.l_contact, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_location, "Location", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.DropDownList("l_location", null, "Select a Location", htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.l_location, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_ctrctStartDate, "Contract Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.EditorFor(model => model.l_ctrctStartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                    @Html.ValidationMessageFor(model => model.l_ctrctStartDate, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_ctrctEndDate, "Contract End Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.EditorFor(model => model.l_ctrctEndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                    @Html.ValidationMessageFor(model => model.l_ctrctEndDate, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="column1">
                                                @Html.LabelFor(model => model.l_rentalAmount, "Rental Amount (in RM)", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </td>
                                            <td>
                                                <div class="input-group input-group-outline my-3">
                                                    @Html.EditorFor(model => model.l_rentalAmount, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.l_rentalAmount, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                    <div class="form-group">
                                        <input type="button" value="Save & Return" class="btn btn-dark-blue" onclick="@("window.location.href='" + @Url.Action("Service", "Services") + "'");" />
                                    </div>

                                </div>}

                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


