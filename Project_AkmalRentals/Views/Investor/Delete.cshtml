@model Project_AkmalRentals.Models.tb_investor

@{
    ViewBag.Title = "Delete";
    ViewBag.Main = "Investors";
    ViewBag.Message = "Are you sure you want to delete this?";
}

<!-- Navbar -->
<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
    <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark">@ViewBag.Main</a></li>
                <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewBag.Title</li>
            </ol>
            <h6 class="font-weight-bolder mb-0">@ViewBag.Title</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                <div class="input-group input-group-outline">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <ul class="navbar-nav  justify-content-end">
                <li class="nav-item d-flex align-items-center">
                    <a href="@Url.Action("Profile","Account", new { id = Session["uid"] })" class="nav-link text-body font-weight-bold px-0">
                        <i class="fa fa-user me-sm-1"></i>
                        <span class="d-sm-inline d-none">@Session["name"]</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->

<div class="row">
    <div class="col-md-6 col-6 offset-3">
        <div class="col-md-12 mb-lg-0 mb-4">
            <div class="card mt-4">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-12 d-flex align-items-center">
                            <h6 class="mb-3">@ViewBag.Message</h6>
                        </div>

                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="d-flex flex-column">
                            <div class="card card-body border card-plain border-radius-lg d-flex">
                                <h6 class="text-uppercase mb-2">@Html.DisplayFor(model => model.tb_user.u_name)</h6>
                                <span class="mb-2">@Html.DisplayNameFor(model => model.tb_user.u_email)<span class="text-dark font-weight-bold ms-sm-2">@Html.DisplayFor(model => model.tb_user.u_email)</span></span>
                                <span class="mb-2">@Html.DisplayNameFor(model => model.i_investment)<span class="text-dark font-weight-bold ms-sm-2">RM @Html.DisplayFor(model => model.i_investment)</span></span>
                                <span class="mb-2">@Html.DisplayNameFor(model => model.i_lot)<span class="text-dark ms-sm-2 font-weight-bold">@Html.DisplayFor(model => model.i_lot)</span></span>
                            </div>
                        </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions mt-3">
                                    <a class="btn bg-gradient-dark" href="@Url.Action("Index")">Back</a>
                                    <input type="submit" value="Delete" class="btn btn-outline-danger">
                                </div>
                            }
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
