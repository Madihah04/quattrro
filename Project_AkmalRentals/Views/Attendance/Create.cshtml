@model Project_AkmalRentals.Models.tb_attendance

@{
    ViewBag.Title = "Create";
    ViewBag.Main = "Attendence";
    ViewBag.Text = "Add Attendance Details";
}


<!-- Navbar -->
<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
    <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark">@ViewBag.Main</a></li>
                <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewBag.Title</li>
            </ol>
            <h6 class="font-weight-bolder mb-0">@ViewBag.Title</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                <div class="input-group input-group-outline">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <ul class="navbar-nav  justify-content-end">
                <li class="nav-item d-flex align-items-center">
                    <a href="@Url.Action("Profile","Account", new { id = Session["uid"] })" class="nav-link text-body font-weight-bold px-0">
                        <i class="fa fa-user me-sm-1"></i>
                        <span class="d-sm-inline d-none">@Session["name"]</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->

<style>
    .form-container {
        padding-left: 20px; /* Adjust the value as needed */
    }

    .column1 {
        width: 200px;
    }

    .column2 {
        width: 50px;
    }
    /* Add more CSS rules for other columns as needed */
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">ADD NEW ATTENDANCE</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                    <div class="table-responsive p-0">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <table class="table align-items-center mb-0">
                                    <tr>
                                        <th class="column1">
                                            @Html.LabelFor(model => model.att_cleanerID, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                        </th>
                                        <td>
                                            <div class="input-group input-group-outline my-3">
                                                @Html.DropDownList("att_cleanerID", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.att_cleanerID, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="column1">
                                            @Html.LabelFor(model => model.att_date, "Attendance Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                        </th>
                                        <td>
                                            <div class="input-group input-group-outline my-3">
                                                @Html.EditorFor(model => model.att_date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                @Html.ValidationMessageFor(model => model.att_date, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="column1">
                                            @Html.LabelFor(model => model.att_status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
                                        </th>
                                        <td>
                                            <div class="input-group input-group-outline my-3">
                                                @Html.DropDownList("att_status", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.att_status, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <div class="form-group">
                                    @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })


                                    <input type="submit" value="Create" class="btn btn-dark-blue" />
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>