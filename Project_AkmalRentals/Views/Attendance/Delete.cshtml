@model Project_AkmalRentals.Models.tb_attendance

@{
    ViewBag.Title = "Delete";
    ViewBag.Main = "Attendance";
    ViewBag.Text = "Delete Attendance";
}


<!-- Navbar -->
<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
    <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark">@ViewBag.Main</a></li>
                <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewBag.Title</li>
            </ol>
            <h6 class="font-weight-bolder mb-0">@ViewBag.Title</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                <div class="input-group input-group-outline">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <ul class="navbar-nav  justify-content-end">
                <li class="nav-item d-flex align-items-center">
                    <a href="@Url.Action("Profile","Account", new { id = Session["uid"] })" class="nav-link text-body font-weight-bold px-0">
                        <i class="fa fa-user me-sm-1"></i>
                        <span class="d-sm-inline d-none">@Session["name"]</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->

<style>
    .column1 {
        width: 200px;
    }

    .column2 {
        width: 50px;
    }
    /* Add more CSS rules for other columns as needed */
</style>
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark-blue text-white">
                    <h6 class="card-title text-white text-uppercase mb-0">Are you sure you want to delete this?</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <tr>
                                <th>
                                    Cleaner
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.tb_cleaner.c_name)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Attendance Date
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.att_date)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Status
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.tb_attendanceStatus.atts_desc)
                                </td>
                            </tr>
                        </table>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
                                <input type="submit" value="Delete" class="btn btn-dark-blue" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
