@model Project_AkmalRentals.Models.tb_tenant
@{
    ViewBag.Title = "ShowPopup";
}
<style>
    .form-container {
        padding-left: 20px; /* Adjust the value as needed */
    }

    .column1 {
        width: 200px;
    }

    .column2 {
        width: 50px;
    }
    /* Add more CSS rules for other columns as needed */
</style>
<!-- Add the modal markup -->
<div class="modal fade" id="createTenantModal" tabindex="-1" aria-labelledby="createTenantModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTenantModalLabel">Add New Tenant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Tenant", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal form-container">
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Your existing form fields go here -->
                        <table class="class=" table align-items-center mb-0"">
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_room, "Available Rooms", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.DropDownList("t_room", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.t_room, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_ic, "Tenant I/C", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_ic, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.t_ic, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_name, "Full Name", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.t_name, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_contact, "Contact No.", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_contact, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.t_contact, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_emergencyContact, "Emergency Contact No.", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_emergencyContact, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.t_emergencyContact, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_chkinDate, "Check In Date", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_chkinDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                                        @Html.ValidationMessageFor(model => model.t_chkinDate, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_chkoutDate, "Check Out Date", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_chkoutDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                                        @Html.ValidationMessageFor(model => model.t_chkoutDate, "", new { @class = "text-danger" })
                                        @ViewBag.Message
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_ICdoc, "I/C Document", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="column1">
                                    @Html.LabelFor(model => model.t_pax, "No. of Pax", htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td>
                                    <div class="input-group input-group-outline my-3">
                                        @Html.EditorFor(model => model.t_pax, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.t_pax, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <br />
                                    <div class="col-md-offset-2 col-md-10">
                                        @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
                                        <input type="submit" value="Create" class="btn btn-success " />
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

