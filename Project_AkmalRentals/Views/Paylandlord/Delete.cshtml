@model Project_AkmalRentals.Models.tb_paylandlord

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h6>Are you sure you want to delete this?</h6>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Delete Landlord</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                    <div class="table-responsive p-0">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Detail</th>
                                    <td>@Html.DisplayFor(model => model.tb_landlord.l_name)</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>@(((DateTime)Model.pl_Date).ToString("yyyy-MM-dd"))</td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>@Html.DisplayFor(model => model.tb_category.cat_desc)</td>
                                </tr>
                                <tr>
                                    <th>Payment</th>
                                    <td>@Html.DisplayFor(model => model.pl_Payment)</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td>@Html.DisplayFor(model => model.pl_Amount)</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td>@Html.DisplayFor(model => model.pl_Receipt)</td>
                                </tr>
                            </tbody>
                        </table>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn bg-gradient-danger" />
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-dark" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
