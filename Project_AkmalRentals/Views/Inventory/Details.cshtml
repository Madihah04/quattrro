@model Project_AkmalRentals.Models.tb_inventory

@{
    ViewBag.Title = "Details Item Inventory";
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Item Details</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.v_item)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.v_item)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.v_quantity)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.v_quantity)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tb_floor.y_location)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.tb_floor.y_location)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-group">
                            @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
                            @Html.ActionLink("Edit", "Edit", new { id = Model.v_id }, new { @class = "btn btn-dark-blue" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
