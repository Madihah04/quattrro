@model Project_AkmalRentals.Models.tb_cleaner

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Are you sure you want to delete this?</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <tr>
                                <th>
                                    Name
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.c_name)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Agency
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.c_company)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Location
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.tb_floor.y_location)
                                </td>
                            </tr>
                        </table>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="button" value="Return" class="btn btn-outline-dark" onclick="@("window.location.href='" + @Url.Action("Service", "Services") + "'");" />
                                <input type="submit" value="Delete" class="btn btn-dark-blue" onclick="@("window.location.href='" + @Url.Action("Service", "Services") + "'");" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>