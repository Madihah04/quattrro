@model Project_AkmalRentals.Models.tb_room

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-dark-blue shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize text-white ps-3">Are you sure you want to delete this?</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2" style="margin-left: 30px;">
                    <div class="table-responsive p-0">
                        <div>
                            <table class="table">
                                <tr>
                                    <th>
                                        Floor
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.tb_floor.y_location)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Room
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.f_room)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Price (RM) 
                                    </th>
                                    <td>
                                       RM @Html.DisplayFor(model => model.f_price)
                                    </td>
                                </tr>
                                <tr>
                                <tr>
                                    <th>
                                       Status
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.tb_status.s_desc)
                                    </td>
                                </tr>
                            </table>
 


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
                                <input type="submit" value="Delete" class="btn btn-dark-blue" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
