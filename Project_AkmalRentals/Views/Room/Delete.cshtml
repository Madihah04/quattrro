@model Project_AkmalRentals.Models.tb_room

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-dark-blue shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize text-white ps-3">Are you sure you want to delete this?</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-2">
                        <div class="card card-body border card-plain border-radius-lg d-flex">
                            <h6 class="text-uppercase mb-2">Room: No  @Html.DisplayFor(model => model.f_room)</h6>
                            <span class="mb-2">Tenant:</span>
                            @if (Model.tb_tenant.Any())
                            {
                                <ul>
                                    @foreach (var tenant in Model.tb_tenant)
                                    {
                                        <li class="text-capitalize text-dark text-sm">Name: @tenant.t_name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-dark text-center">No tenant.</span>
                            }
                            @if (ViewBag.Error != null)
                            {
                                <div class="border border-0 p-2 mb-2 border-radius-lg text-white text-center alert-danger" style="margin-left: 5px;">
                                    @ViewBag.Error
                                </div>

                            }
                          


                            <br />
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
                                    <input type="submit" value="Delete" class="btn btn-dark-blue" />
                                </div>
                            }

                        </div>
                    </div>
                    </div>
                </div>



                </div>
</div>
    </div>
